<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="0dp"
    android:background="@drawable/bgx"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="#000"
        android:gravity="center">

        <TextView

            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="CHOOSE YOUR WORKOUT"
            android:textColor="#3bda80"
            android:textSize="32dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <ScrollView
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_below="@+id/header"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="400dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <View
                android:id="@+id/divider8"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="?android:attr/listDivider"
                android:foreground="#3bda80"
                android:translationY="25dp" />

            <Button
                android:id="@+id/bulking"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="false"
                android:layout_below="@+id/title"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:layout_centerHorizontal="true"
                android:text="ABS WORKOUT"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/abs"/>

            <View
                android:id="@+id/divider9"
                android:layout_width="350dp"
                android:layout_height="3dp"
                android:background="?android:attr/listDivider"
                android:foreground="#3bda80"
                android:translationX="25dp"
                android:translationY="25dp" />

            <Button
                android:id="@+id/weight_loss"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bulking"
                android:layout_centerInParent="false"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/chest"
                android:text="CHEST WORKOUT"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider10"
                android:layout_width="350dp"
                android:layout_height="3dp"
                android:background="?android:attr/listDivider"
                android:foreground="#3bda80"
                android:translationX="25dp"
                android:translationY="25dp" />

            <Button
                android:id="@+id/athlete"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weight_loss"
                android:layout_centerInParent="false"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:layout_centerHorizontal="true"
                android:text="SHOULDER WORKOUT"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/shoulder"/>

            <View
                android:id="@+id/divider11"
                android:layout_width="350dp"
                android:layout_height="3dp"
                android:background="?android:attr/listDivider"
                android:foreground="#3bda80"
                android:translationX="25dp"
                android:translationY="25dp" />

            <Button
                android:id="@+id/bb"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/athlete"
                android:layout_centerInParent="false"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:layout_centerHorizontal="true"
                android:text="ARM WORKOUT"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/arms"/>

            <View
                android:id="@+id/divider12"
                android:layout_width="350dp"
                android:layout_height="3dp"
                android:background="?android:attr/listDivider"
                android:foreground="#3bda80"
                android:translationX="25dp"
                android:translationY="25dp" />

            <Button
                android:id="@+id/leg"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/athlete"
                android:layout_centerInParent="false"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:layout_centerHorizontal="true"
                android:text="LEG WORKOUT"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@drawable/leg"
                android:textStyle="bold"/>

            <View
                android:id="@+id/divider13"
                android:layout_width="350dp"
                android:layout_height="3dp"
                android:background="?android:attr/listDivider"
                android:foreground="#3bda80"
                android:translationX="25dp"
                android:translationY="25dp" />

            <Button
                android:id="@+id/fit"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/athlete"
                android:layout_centerInParent="false"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:layout_centerHorizontal="true"
                android:text="FITNESS WORKOUT"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/fit"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>