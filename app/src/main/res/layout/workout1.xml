<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="0dp"
    android:background="@drawable/bgx"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:gravity="center" >

        <TextView

            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="CHOOSE YOUR WORKOUT"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>
    <ScrollView
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_below="@+id/header"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="400dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/bulking"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="false"
                android:layout_below="@+id/title"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:layout_centerHorizontal="true"
                android:text="ABS WORKOUT"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/abs"/>
            <Button
                android:id="@+id/weight_loss"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bulking"
                android:layout_centerInParent="false"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:layout_centerHorizontal="true"
                android:text="CHEST WORKOUT"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/chest"/>
            <Button
                android:id="@+id/athlete"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weight_loss"
                android:layout_centerInParent="false"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:layout_centerHorizontal="true"
                android:text="SHOULDER WORKOUT"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/shoulder"/>
            <Button
                android:id="@+id/bb"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/athlete"
                android:layout_centerInParent="false"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:layout_centerHorizontal="true"
                android:text="ARM WORKOUT"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/arms"/>
            <Button
                android:id="@+id/leg"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/athlete"
                android:layout_centerInParent="false"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:layout_centerHorizontal="true"
                android:text="LEG WORKOUT"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/leg"/>
            <Button
                android:id="@+id/fit"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/athlete"
                android:layout_centerInParent="false"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:layout_centerHorizontal="true"
                android:text="FITNESS WORKOUT"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/fit"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>